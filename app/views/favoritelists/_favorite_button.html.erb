  <% if current_user.favoriting?(tweet) %>

    <%= form_for(current_user.favoritelists.find_by(tweet_id: tweet.id), html: { method: :delete }) do |f| %>

      <%= hidden_field_tag :tweet_id, tweet.id %>

      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>

    <% end %>

  <% else %>

    <%= form_for(current_user.favoritelists.build) do |f| %>

      <%= hidden_field_tag :tweet_id, tweet.id %>

      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>

    <% end %>

  <% end %>
